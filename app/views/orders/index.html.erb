<h1>Listing orders</h1>

<table>
  <tr>
    <th>Issell</th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Qty</th>
    <th>Southwestlat</th>
    <th>Northeastlng</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.isSell %></td>
    <td><%= order.title %></td>
    <td><%= order.description %></td>
    <td><%= order.price %></td>
    <td><%= order.qty %></td>
    <td><%= order.southwestLat %></td>
    <td><%= order.northeastLng %></td>
    <td><%= (order.user) ? order.user.email : "NO USER" %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

